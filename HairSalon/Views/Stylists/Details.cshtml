@{
  Layout = "_Layout";
}

@using HairSalon.Models

<h3>Stylist Name: @ViewBag.StylistName</h3>
<h3>Stylist Shift Time: @ViewBag.ShiftTime</h3>
<h2>Clients</h2>
@if (@Model.Count != 0)
{
  <h3>No Clients have been added yet!</h3>
} 

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "See Client Details", new { id = client.ClientId })</li>
  }
</ul>